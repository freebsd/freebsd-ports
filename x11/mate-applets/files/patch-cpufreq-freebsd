+#ifdef __FreeBSD__
 guint
 cpufreq_utils_get_n_cpus (void)
 {
+	size_t len;
+	static guint n_cpus = 0;
+
+	if (n_cpus > 0)
+		return n_cpus;
+
+	len = sizeof (n_cpus);
+	if (sysctlbyname ("hw.ncpu", &n_cpus, &len, NULL, 0) == -1) {
+		return 1;
+	}
+
+	return n_cpus;
+}
