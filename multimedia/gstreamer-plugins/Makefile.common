.endif

# flac
.if ${GST_PLUGIN}=="flac"
LIB_DEPENDS+=	FLAC.7:${PORTSDIR}/audio/flac
.endif

# gconf
.if ${GST_PLUGIN}=="gconf"
USE_GNOME+=	gconf2
GST_PLUGIN_DIR=	ext/gconf \
		gconf
GCONF_SCHEMAS=	gstreamer-${GST_VERSION}.schemas
