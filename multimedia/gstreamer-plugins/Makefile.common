		${GST_LIB_DIR}/libgstsid.a \
		${GST_LIB_DIR}/libgstsid.la
DIST=	ugly
.endif

# speex
.if ${GST_PLUGIN}=="speex"
LIB_DEPENDS+=	speex.3:${PORTSDIR}/audio/speex
.endif

# theora
.if ${GST_PLUGIN}=="theora"
LIB_DEPENDS+=	theora.2:${PORTSDIR}/multimedia/libtheora
