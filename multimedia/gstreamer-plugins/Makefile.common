DIST=	base
.endif

# gsm
.if ${GST_PLUGIN}=="gsm"
LIB_DEPENDS+=	gsm.1:${PORTSDIR}/audio/gsm
DIST=	bad
.endif

# ivorbis
.if ${GST_PLUGIN}=="ivorbis"
