PORTNAME=	dtdparse
PORTVERSION=	2.00
PORTREVISION=	1
CATEGORIES=	textproc
MASTER_SITES=	SF
DISTNAME=	SGML-DTDParse-${PORTVERSION}

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Parse a DTD and produce an XML document that represents it

