PORTNAME=	${MCUTARGET}mcu
PORTVERSION=	1.0.${MCUVERSION}
PORTREVISION=	2
CATEGORIES=	devel
MASTER_SITES=	SF/mspgcc/${PORTNAME}
DISTNAME=	${PORTNAME}-${MCUVERSION}

PATCH_SITES=		SF/mspgcc/Patches/LTS/${LTSVERSION}
PATCHFILES=		${LTS_PATCHES}
PATCH_DIST_STRIP=	-p1

MAINTAINER=	lev@FreeBSD.org
COMMENT=	Header files for TI's msp430 MCUs cross-development

LICENSE=	BSD3CLAUSE
LICENSE_FILE=	${WRKSRC}/COPYING

DEPRECATED=		Obsolete. Please, use devel/gcc-msp430-ti-toolchain
EXPIRATION_DATE=	2016-01-08

LTSVERSION=	20120406
MCUVERSION=	20120406
MCUTARGET=	msp430
BUGS_FIXED=	3522088
LTS_PATCHES=	${BUGS_FIXED:C/([0-9]+)/${PORTNAME}-${MCUVERSION}-sf\1.patch/g}

USES=		tar:bzip2

NO_BUILD=	yes
NO_ARCH=	yes

do-install:
	@cd ${WRKSRC} && MSP430MCU_ROOT=${WRKSRC} ${SH} scripts/install.sh ${PREFIX} ${STAGEDIR}${PREFIX}

.include <bsd.port.mk>
