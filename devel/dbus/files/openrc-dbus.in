command=/usr/local/bin/dbus-daemon
pidfile=/var/run/dbus/pid
command_args="${dbusd_args---system}"
name="Message Bus Daemon"

depend()
{
	need localmount
	after bootmisc
}

start_pre()
{
	mkdir -p $(dirname $pidfile)
	if [ ! -e "/var/db/dbus/machine-id" ] ; then
	/usr/local/bin/dbus-uuidgen --ensure
	fi
}
