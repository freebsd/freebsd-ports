LICENSE_FILE_LGPL21=	${WRKSRC}/LICENSE

USES=		python
USE_PYTHON=	autoplist distutils

post-install:
	${STRIP_CMD} ${STAGEDIR}${PYTHON_SITELIBDIR}/crc32c.cpython-${PYTHON_SUFFIX}.so

.include <bsd.port.mk>
