PORTNAME=	crc32c
PORTVERSION=	2.4
CATEGORIES=	devel python
MASTER_SITES=	PYPI
PKGNAMEPREFIX=	${PYTHON_PKGNAMEPREFIX}

MAINTAINER=	bofh@FreeBSD.org
COMMENT=	Python package exposing the intel sse4.2 crc32c instruction
