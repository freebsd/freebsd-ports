PORTNAME=	isl
DISTVERSION=	0.27
CATEGORIES=	devel math
MASTER_SITES=	SOURCEFORGE/libisl

MAINTAINER=	wen@FreeBSD.org
COMMENT=	Integer Set Library
WWW=		https://libisl.sourceforge.io/

LICENSE=	MIT
