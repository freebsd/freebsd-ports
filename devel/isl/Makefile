CONFIGURE_ARGS=	--with-gmp-prefix=${LOCALBASE}

INSTALL_TARGET=	install-strip
TEST_TARGET=	check

OPTIONS_DEFINE=		OPTIMIZED_CFLAGS
OPTIONS_DEFAULT=	OPTIMIZED_CFLAGS

OPTIMIZED_CFLAGS_CFLAGS=	-O3

