.if !defined(NOPORTDOCS)
post-install:
	@${MKDIR} ${EXAMPLESDIR}/ticket
	@${CP} -R ${WRKSRC}/eg/ticket ${EXAMPLESDIR}/
	@${ECHO_MSG} "===> Examples installed in ${EXAMPLESDIR}."
	@${MKDIR} ${DATADIR}
	@${CP} -R ${WRKSRC}/struct/* ${DATADIR}/
	@${ECHO_MSG} "===> SQL data structures installed in ${DATADIR}."
.endif

