PORTNAME=	tdl
PORTVERSION=	1.5.2
PORTREVISION=	3
CATEGORIES=	devel
MASTER_SITES=	http://www.rpcurnow.force9.co.uk/tdl/

MAINTAINER=	ports@FreeBSD.org
COMMENT=	To-do list manager
WWW=		http://www.rc0.org.uk/tdl/

LICENSE=	GPLv2+
LICENSE_FILE=	${WRKSRC}/COPYING

CONFLICTS=	devtodo

USES=		readline

HAS_CONFIGURE=	yes

CONFIGURE_ARGS+=--prefix=${PREFIX} --mandir=${PREFIX}/share/man \
		--readline-dir=${LOCALBASE}

post-patch:
	@${REINPLACE_CMD} -e 's/-R\$$/-Wl,-rpath,$$/' ${WRKSRC}/configure

post-install:
	${CHMOD} u+w ${STAGEDIR}${PREFIX}/bin/${PORTNAME}
	${STRIP_CMD} ${STAGEDIR}${PREFIX}/bin/${PORTNAME}
	${CHMOD} u-w ${STAGEDIR}${PREFIX}/bin/${PORTNAME}

.include <bsd.port.mk>
