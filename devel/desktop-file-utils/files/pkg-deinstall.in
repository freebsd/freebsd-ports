#!/bin/sh
#
# $FreeBSD$
#
# Remove leftover mimeinfo.cache files.

if [ "$2" != "POST-DEINSTALL" ]; then
    exit 0
fi

for mdir in %%MIMEDIRS%%; do
    if [ -f ${mdir}/mimeinfo.cache ]; then
	rm -f ${mdir}/mimeinfo.cache
    fi
done

for pmdir in %%PORT_MIMEDIRS%%; do
    rmdir ${pmdir} 2>/dev/null
done

exit 0
