+#include <osreldate.h>
+#if __FreeBSD_version < 800067
+size_t strnlen(const char *s, size_t maxlen)
+{
+       size_t i;
+       for (i = 0; i < maxlen; i++) {
+               if (s[i] == '\0')
+                       break;
+       }
+       return i;
+}
