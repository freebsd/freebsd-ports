+static int prtuse(pname)
+char	*pname;
+{
+	char	**p = helpmsg,
+			**e = helpmsg + (sizeof (helpmsg) / (sizeof (char **)));
+
+	fprintf(stderr,"Syntax: %s {[<opt>] file ...}\n",pname);
+	while ( p < e ) fputs(*p++,stderr);
 }
