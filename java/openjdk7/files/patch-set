-bool JavaThread::pd_get_top_frame_for_signal_handler(frame* fr_addr,
-                                                     void* ucontext,
-                                                     bool isInJava) {
-  assert(Thread::current() == this, "caller must be current thread");
-  assert(this->is_Java_thread(), "must be JavaThread");
