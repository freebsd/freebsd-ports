#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: nsd
# REQUIRE: DAEMON
#
# Add the following lines to /etc/rc.conf to enable nsd:
#
# nsd_enable="YES"
# nsd_flags="<set as needed>"


. %%RC_SUBR%%

name=nsd
rcvar=`set_rcvar`

required_files=%%NSDDIR%%/nsd.zones

command=%%PREFIX%%/sbin/${name}
pidfile=/var/run/${name}.pid

# set defaults

nsd_enable=${nsd_enable:-"NO"}

load_rc_config ${name}
run_rc_command "$1"
