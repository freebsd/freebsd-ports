#!/bin/sh
#
# $FreeBSD$
#
# PROVIDE: ddclient
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following line to /etc/rc.conf to enable ddclient:
#
# ddclient_enable="YES"
#

. %%RC_SUBR%%

name="ddclient"
rcvar=${name}_enable

command="%%PREFIX%%/sbin/${name}"
required_files="%%PREFIX%%/etc/${name}.conf"

load_rc_config ${name}

: ${ddclient_enable="NO"}
: ${ddclient_flags="-daemon 300"}

run_rc_command "$1"
