PORTNAME=	porttools
DISTVERSION=	1.11
PORTREVISION=	2
CATEGORIES=	ports-mgmt

MAINTAINER=	skreuzer@FreeBSD.org
COMMENT=	Tools for testing and submitting port updates and new ports
WWW=		https://github.com/skreuzer/porttools/

LICENSE=	BSD2CLAUSE

RUN_DEPENDS=	git:devel/git \
		portlint:ports-mgmt/portlint \
		ydiff:textproc/ydiff

USES=		sudo
USE_GITHUB=	yes
GH_ACCOUNT=	skreuzer

# Make the version information of porttools itself
# available for inclusion in the PRs generated by it.
MAKE_ENV+=	DATADIR="${DATADIR}" \
		DOCSDIR="${DOCSDIR}" \
		MANPREFIX="${PREFIX}/share" \
		PORTVERSION="${PORTVERSION}"

OPTIONS_DEFINE=	DOCS

DOCS_INSTALL_TARGET=	install install-docs

.include <bsd.port.mk>
