PORTNAME=	porttools
PORTVERSION=	1.11
PORTREVISION=	1
CATEGORIES=	ports-mgmt

MAINTAINER=	skreuzer@FreeBSD.org
COMMENT=	Tools for testing and submitting port updates and new ports
WWW=		https://github.com/skreuzer/porttools/

LICENSE=	BSD2CLAUSE

RUN_DEPENDS=	portlint:ports-mgmt/portlint \
		ydiff:textproc/ydiff \
		sudo:security/sudo \
		git:devel/git

USE_GITHUB=	yes
GH_ACCOUNT=	skreuzer
GH_TAGNAME=	1ec3e1d3c00e77cadc9a4dfd7f75de9674909016

# Make the version information of porttools itself
# available for inclusion in the PRs generated by it.
MAKE_ENV+=	DATADIR="${DATADIR}" DOCSDIR="${DOCSDIR}" MANPREFIX="${PREFIX}/share" PORTVERSION="${PORTVERSION}"

OPTIONS_DEFINE=		DOCS

DOCS_INSTALL_TARGET=	 install install-docs

.include <bsd.port.mk>
