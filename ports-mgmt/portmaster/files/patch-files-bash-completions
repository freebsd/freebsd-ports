+_pkgs_list() {
+	local dbdir="$1"
+	shift 1 # the rest will be passed diretly to compgen
+	if [ -n "$(make -f /usr/share/mk/bsd.port.mk -V WITH_PKGNG)" ]; then
+		compgen -W "$(pkg info -aq)" $*
+	else
+		cd ${dbdir} && compgen -d $*
+	fi
+}
