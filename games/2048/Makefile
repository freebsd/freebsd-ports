# $FreeBSD$

PORTNAME=	2048
PORTVERSION=	0.9
PORTREVISION=	1
CATEGORIES=	games
DISTVERSIONPREFIX=	v

MAINTAINER=	swills@FreeBSD.org
COMMENT=	Command line version of 2048

LICENSE=	MIT
LICENSE_FILE=	${WRKSRC}/LICENSE

USE_GITHUB=	yes
GH_ACCOUNT=	Tiehuis
GH_PROJECT=	2048-cli

ALL_TARGET=	2048 2048nc
PLIST_FILES=	bin/2048 bin/2048nc man/man1/2048.1.gz man/man1/2048nc.1.gz
PORTDOCS=	README.md

OPTIONS_DEFINE=	DOCS

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/2048 ${STAGEDIR}${PREFIX}/bin
	${INSTALL_PROGRAM} ${WRKSRC}/2048nc ${STAGEDIR}${PREFIX}/bin
	${INSTALL_MAN} ${WRKSRC}/man/2048.1 ${STAGEDIR}${PREFIX}/man/man1
	${INSTALL_MAN} ${WRKSRC}/man/2048nc.1 ${STAGEDIR}${PREFIX}/man/man1
	${MKDIR} ${STAGEDIR}${DOCSDIR}
	${INSTALL_DATA} ${WRKSRC}/README.md ${STAGEDIR}${DOCSDIR}

.include <bsd.port.mk>
