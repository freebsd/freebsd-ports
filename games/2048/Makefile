PORTNAME=	2048
PORTVERSION=	0.0.0.2014091301
CATEGORIES=	games

MAINTAINER=	swills@FreeBSD.org
COMMENT=	Command line version of 2048

LICENSE=	MIT
LICENSE_FILE=	${WRKSRC}/LICENSE

USE_GITHUB=	yes
GH_ACCOUNT=	Tiehuis
