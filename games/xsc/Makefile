PORTNAME=	xsc
PORTVERSION=	1.5
PORTREVISION=	2
CATEGORIES=	games
MASTER_SITES=	http://www.panix.com/~mbh/xsc/

MAINTAINER=	ports@FreeBSD.org
COMMENT=	A vector graphics space shoot'em up game

USE_XORG=	x11
GNU_CONFIGURE=	yes
CONFIGURE_ENV=	CPPFLAGS="${CPPFLAGS}" \
		LDFLAGS="${LDFLAGS}"
PLIST_FILES=	bin/xsc

.include <bsd.port.mk>
