#!/bin/sh

case $2 in
POST-INSTALL)
	GROUP=realtime
	GID=557
	PW=/usr/sbin/pw

	if ${PW} group show "${GROUP}" 2>/dev/null; then
		echo "You already have a group \"${GROUP}\", so I will use it."
	else
		if ${PW} groupadd ${GROUP} -g ${GID}; then
			echo "Added group \"${GROUP}\"."
		else
			echo "Adding group \"${GROUP}\" failed..."
			exit 1
		fi
	fi

	exit 0
	;;
esac
