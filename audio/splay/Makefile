PORTNAME=		splay
PORTVERSION=		0.9.5.2
CATEGORIES=		audio
MASTER_SITES=		http://splay.sourceforge.net/tgz/

MAINTAINER=		cjh@FreeBSD.org
COMMENT=	An audio player that decodes MPEG Layer I,II,III and WAV files

GNU_CONFIGURE=		yes
MAN1=			splay.1
PLIST_FILES=		bin/splay

.include <bsd.port.mk>
