PORTNAME=	PDL-Perldl2
PORTVERSION=	2.002
PORTREVISION=	1
CATEGORIES=	math perl5
MASTER_SITES=	CPAN
PKGNAMEPREFIX=	p5-

MAINTAINER=	sunpoet@FreeBSD.org
COMMENT=	Simple shell (version 2) for PDL
WWW=		https://metacpan.org/dist/PDL-Perldl2

LICENSE=	ART10 GPLv1+
