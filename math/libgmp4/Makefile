PORTNAME=	libgmp
PORTVERSION=	4.1
PORTREVISION=	0
CATEGORIES=	math devel
MASTER_SITES=	${MASTER_SITE_GNU}
MASTER_SITE_SUBDIR=	gmp
DISTNAME=	gmp-${PORTVERSION}

MAINTAINER=	ports@FreeBSD.org

USE_LIBTOOL=	yes
GNU_CONFIGURE=	yes
CONFIGURE_ARGS=	--enable-cxx
INSTALLS_SHLIB=	yes

.include <bsd.port.mk>
