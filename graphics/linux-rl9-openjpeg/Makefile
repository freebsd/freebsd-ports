PORTNAME=	openjpeg
PORTVERSION=	2.4.0
DISTVERSIONSUFFIX=	-7.el9
CATEGORIES=	graphics linux
PKGNAMESUFFIX=	2

MAINTAINER=	emulation@FreeBSD.org
COMMENT=	Open-source JPEG 2000 codec (Rocky Linux ${LINUX_DIST_VER})
