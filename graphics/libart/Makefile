PORTNAME=	libart
PORTVERSION=	2.3.3
CATEGORIES=	graphics
MASTER_SITES=	http://www.artofcode.com/${PORTNAME}/

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Library for high-performance 2D graphics

WRKSRC=		${WRKDIR}/${PORTNAME}_lgpl-${PORTVERSION}
GNU_CONFIGURE=	yes
INSTALLS_SHLIB=	yes

CONFLICTS=	libart_lgpl2-*

.include <bsd.port.mk>
