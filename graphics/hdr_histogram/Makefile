		HDR_HISTOGRAM_BUILD_STATIC \
		HDR_HISTOGRAM_INSTALL_SHARED \
		HDR_HISTOGRAM_INSTALL_STATIC \
		HDR_LOG_REQUIRED

USE_GITHUB=	yes
