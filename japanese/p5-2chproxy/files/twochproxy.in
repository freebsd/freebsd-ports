#!/bin/sh
#
# PROVIDE: twochproxy
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# $FreeBSD$

. /etc/rc.subr

name=twochproxy
rcvar=${name}_enable

command=%%PREFIX%%/sbin/2chproxy.pl
start_cmd=${name}_start
stop_cmd=${name}_stop
load_rc_config $name
pidfile=/var/run/2chproxy.pid
: ${twochproxy_enable:=NO}

twochproxy_start()
{

	$command --daemon
}
twochproxy_stop()
{

	$command --kill && rm -f $pidfile
}

run_rc_command "$1"
