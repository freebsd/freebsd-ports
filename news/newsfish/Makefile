PORTNAME=	newsfish
PORTVERSION=	1.2.6
PORTREVISION=	1
CATEGORIES=	news
MASTER_SITES=	SF

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Batch USENET news reader with filter capabilities
WWW=		https://www.saddi.com/software/newsfish/

USES=		gmake
GNU_CONFIGURE=	yes
GNU_CONFIGURE_MANPREFIX=${PREFIX}/share

PLIST_FILES=	bin/newsfish \
		share/man/man1/newsfish.1.gz

.include <bsd.port.mk>
