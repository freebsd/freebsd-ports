PORTNAME=	surblhost
PORTVERSION=	0.8.0
PORTREVISION=	1
CATEGORIES=	mail
MASTER_SITES=	SF

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Check if a hostname is blacklisted
WWW=		https://surblhost.sourceforge.net/

USES=	tar:bzip2
GNU_CONFIGURE=	yes
GNU_CONFIGURE_MANPREFIX=${PREFIX}/share
PLIST_FILES=	bin/${PORTNAME} \
		share/man/man1/surblhost.1.gz

.include <bsd.port.mk>
