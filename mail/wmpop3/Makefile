# Created by: Jim Mock <jim@FreeBSD.org>
# $FreeBSD$

PORTNAME=	wmpop3
PORTVERSION=	0.5.6a
PORTREVISION=	4
CATEGORIES=	mail windowmaker
MASTER_SITES=	#
DISTNAME=	WMPop3-${PORTVERSION}

MAINTAINER=	ports@FreeBSD.org
COMMENT=	Dockapp to check email via POP3 protocol

BROKEN=		unfetchable

LICENSE=	GPLv2

USE_CSTD=	gnu89
USE_XORG=	xpm

WRKSRC=		${WRKDIR}/${PORTNAME}-${PORTVERSION}/${PORTNAME}

PLIST_FILES=	bin/wmpop3
PORTDOCS=	CHANGE_LOG README
PORTEXAMPLES=	wmpop3rc

OPTIONS_DEFINE=	DOCS EXAMPLES

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/wmpop3 ${STAGEDIR}${PREFIX}/bin
	@${MKDIR} ${STAGEDIR}${EXAMPLESDIR}
	${INSTALL_DATA} ${WRKSRC}/wmpop3rc ${STAGEDIR}${EXAMPLESDIR}
	@${MKDIR} ${STAGEDIR}${DOCSDIR}
	${INSTALL_DATA} ${PORTDOCS:S,^,${WRKSRC}/../,} ${STAGEDIR}${DOCSDIR}

.include <bsd.port.mk>
