#!/bin/sh
case "$2" in
    INSTALL|BUILD)
	echo '**********************************************************************'
	echo '*  WARNING!!!                                                        *'
	echo '*  Youbin has potential security problem!!                           *'
	echo '*  It is discouraged to use this program to avoid any security       *'
	echo '*  problem.                                                          *'
	echo '**********************************************************************'
	if [ ! -z "${PACKAGE_BUILDING}" -o ! -z "${BATCH}" ]; then
	   exit 0
	fi
	read -p 'Would you like to proceed (y/n)? ' ans
	case "X$ans" in
	  Xy*|XY*)
	    exit 0
	    ;;
	  *)
	    exit 1
	    ;;
	esac
    ;;
esac
