+#include <ec.h>
+
+void safe_free_mem(char **param, int *param_length, char *command);
+
+
+void safe_free_mem(char **param, int *param_length, char *command)
+{
+   int k;
+
+   SAFE_FREE(command);
+        for(k= 0; k < (*param_length); ++k)
+                SAFE_FREE(param[k]);
+        SAFE_FREE(param);
+}
+
