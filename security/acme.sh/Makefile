# $FreeBSD$

PORTNAME=	acme.sh
PORTVERSION=	2.6.9
PORTREVISION=	1
DISTVERSIONPREFIX=	v
CATEGORIES=	security

MAINTAINER=	dvl@FreeBSD.org
COMMENT=	ACME protocol client written in shell

LICENSE=	GPLv3+

USE_GITHUB=	yes
GH_ACCOUNT=	Neilpang

USERS=	acme
GROUPS=	acme

OPTIONS_DEFINE=	DOCS
OPTIONS_SINGLE=	HTTP
OPTIONS_SINGLE_HTTP=	CURL WGET
OPTIONS_DEFAULT=	CURL
CURL_DESC=	Depend on cURL for HTTP(S) queries
WGET_DESC=	Depend on Wget for HTTP(S) queries

NO_ARCH=	yes
NO_BUILD=	yes

CURL_RUN_DEPENDS=	curl:ftp/curl
WGET_RUN_DEPENDS=	wget:ftp/wget

PLIST_FILES=	sbin/${PORTNAME}
PORTDOCS=	README.md

do-install:
	${INSTALL_SCRIPT} ${WRKSRC}/${PORTNAME} ${STAGEDIR}${PREFIX}/sbin/${PORTNAME}

do-install-DOCS-on:
	${MKDIR} ${STAGEDIR}${DOCSDIR}
	${INSTALL_MAN} ${WRKSRC}/README.md ${STAGEDIR}${DOCSDIR}

.include <bsd.port.mk>
