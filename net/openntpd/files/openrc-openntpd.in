: ${openntpd_config:=%%PREFIX%%/etc/ntpd.conf}
: ${ntpd_drift:=/var/db/ntpd.drift}

BINARY=%%PREFIX%%/sbin/ntpd
required_files=$openntpd_config
pidfile=/var/run/ntpd.pid
args="$ntpd_args -f $openntpd_config -p $pidfile -d -S"
name="Network Time Protocol Daemon"

depend()
{
	need localmount
	before pcdm
}

start()
{
	ebegin "Starting $name"
	start-stop-daemon --start --exec $BINARY -p ${pidfile} -b -- $args
	eend $?
}
