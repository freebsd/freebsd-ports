+# include <kernel/kernel.h>
+
+private void
+load(string filename)
+{
+    if (!find_object(filename)) {
+        compile_object(filename);
+    }
+}
+
+static void
+create()
+{
+#ifdef __NETWORK_EXTENSIONS__
+    load("/kernel/sys/telnet_port");
+    load("/kernel/sys/binary_port");
+#endif
+}
