#!/bin/sh

# PROVIDE: asterisk
# REQUIRE: DAEMON
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable asterisk:
#
# asterisk_enable="YES"
#

. %%RC_SUBR%%

name=asterisk
rcvar=`set_rcvar`

command=%%PREFIX%%/sbin/asterisk

pidfile=${asterisk_pidfile:-"/var/run/asterisk.pid"}

asterisk_enable=${asterisk_enable:-"NO"}

load_rc_config $name
run_rc_command "$1"
