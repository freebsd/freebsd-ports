#!/bin/sh

case $1 in
start)
	test -d JDIR -a -x PREFIX/sbin/junkbuster -a -f JDIR/configfile || exit 1
	cd JDIR
	su -m nobody -c "PREFIX/sbin/junkbuster configfile &"
	echo -n " junkbuster"
	;;
stop)
	killall junkbuster && echo -n " junkbuster"
	;;
restart)
	$0 stop
	$0 start
	;;
*)
	echo "Usage: `basename $0` {start|stop}" >&2
	exit 64
	;;
esac

exit 0
