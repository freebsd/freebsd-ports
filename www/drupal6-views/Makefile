## Maintenance targets for creating lists of directories and files.
module-dirs: patch
	@cd ${WRKSRC}; ${FIND} -s . -type d -d -mindepth 1 | ${SED} -e's|^\./|		|;s|$$| \\|'

module-files: patch
	@cd ${WRKSRC}; ${FIND} -s . -type f -d | ${SED} -e's|^\./|		|;s|$$| \\|'

